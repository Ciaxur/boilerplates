{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",

        "removeComments": true,
        "preserveConstEnums": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,

        "outDir": "out/"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}