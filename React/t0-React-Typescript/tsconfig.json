{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "jsx": "react",

        "removeComments": false,
        "preserveConstEnums": true,
        "noImplicitAny": false,
        "noImplicitThis": true,
        "alwaysStrict": true,

        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist"
    },
    "include": [
        "src"
    ]
}